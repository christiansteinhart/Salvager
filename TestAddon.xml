<Ui xmlns="http://www.blizzard.com/wow/ui/" 
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
                   xsi:schemaLocation="http://www.blizzard.com/wow/ui/ 
                   ..\..\FrameXML\UI.xsd">
    <Script File="HelloWorld.lua"/>
    <Frame name = "TestAddonEntryTemplate" virtual="true" enableMouse="true">
        <Size>
            <AbsDimension x="365" y="44" />
        </Size>
        <Layers>
          <Layer>
              <FontString name="$parentItemText" parentKey="text" inherits="GameFontNormal" justifyH="LEFT">
                <Anchors>
                  <Anchor point="TOPLEFT">
                    <Offset x="2" y="-6"/>
                  </Anchor> 
                </Anchors>
              </FontString>
              <FontString parentKey="info" inherits="GameFontNormal" justifyH="LEFT">
                <Anchors>
                  <Anchor point="TOPLEFT" relativeTo="$parentItemText" relativePoint="BOTTOMLEFT">
                    <Offset x="0" y="-2"/>
                  </Anchor> 
                </Anchors>
              </FontString>
          </Layer>
        </Layers>
        <Frames>
          <Button inherits="OptionsButtonTemplate" text="Remove" parentKey="removeBtn">
            <Anchors>
              <Anchor point="TOPRIGHT">
                <Offset x="0" y="-2"/>
              </Anchor> 
            </Anchors>
            <Scripts>
              <OnClick> TestAddonHandleItem(self:GetParent().text:GetText(), "remove") </OnClick>
            </Scripts>
          </Button>
          <Button inherits="OptionsButtonTemplate" text="Sell" parentKey="sellBtn">
            <Anchors>
              <Anchor point="BOTTOMRIGHT">
                <Offset x="0" y="2"/>
              </Anchor> 
            </Anchors>
            <Scripts>
              <OnLoad> 
                self:Disable();
                self:RegisterEvent("MERCHANT_SHOW");
                self:RegisterEvent("MERCHANT_CLOSED");
              </OnLoad>
              <OnEvent function="TestAddonToggleSellButton" />
              <OnClick> TestAddonHandleItem(self:GetParent().text:GetText(), "sell") </OnClick>
            </Scripts>
          </Button>
        </Frames>
    </Frame>
    <Frame name="TestAddonFrame" parent="UIParent" enableMouse="true" movable="true" hidden="true">
        <Size x="400" y="275"/>
        <ResizeBounds>
            <minResize>
                <AbsDimension x="400" y="160"/>
            </minResize>
            <maxResize>
                <AbsDimension x="400" y="700"/>
            </maxResize>
        </ResizeBounds>
        <Anchors>
          <Anchor point="CENTER"/>
        </Anchors>
        <Scripts>
            <OnLoad>
                TestAddonScrollBar:Show()
            </OnLoad>
            <OnEvent function="TestAddonEventHandler"/>
        </Scripts>
        <TitleRegion>
            <Size x="400" y="20"/>
            <Anchors>
                <Anchor point="TOP"/>
            </Anchors>
        </TitleRegion>
        <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
          <BackgroundInsets>
            <AbsInset left="4" right="4" top="4" bottom="4" />
          </BackgroundInsets>
          <TileSize>
            <AbsValue val="16" />
          </TileSize>
          <EdgeSize>
            <AbsValue val="16" />
          </EdgeSize>
        </Backdrop>
        <Frames>
          <Frame name="TestAddonTitleFrame" parentKey="header">
             <Size x="400" y="20"/>
             <Anchors>
              <Anchor point="TOP" relativeTo="TestAddonFrame" relativePoint="TOP" />
             </Anchors>
             <Layers>
                <Layer>
                    <FontString parentKey="text" inherits="GameFontNormal" justifyH="CENTER" text="Lootlist Window">
                    </FontString>
                </Layer>
             </Layers>
          </Frame>
          <Button name="$parentButtonClose" inherits="UIPanelCloseButton">
            <Anchors>
              <Anchor point="TOPRIGHT">
                <Offset x="3" y="3"/>
              </Anchor> 
            </Anchors>
            <Scripts>
              <OnClick> self:GetParent():Hide(); </OnClick>
            </Scripts>
          </Button>
          <Button name="$parentButtonClear" inherits="OptionsButtonTemplate" text="Clear list">
            <Anchors>
              <Anchor point="BOTTOMRIGHT">
                <Offset x="-3" y="3"/>
              </Anchor> 
            </Anchors>
            <Scripts>
              <OnClick> clear_loot(); </OnClick>
            </Scripts>
          </Button>
          <Button name="$parentButtonToggle" inherits="OptionsButtonTemplate" text="Enable">
            <Anchors>
              <Anchor point="RIGHT" relativeTo="$parentButtonClear" relativePoint="LEFT">
                <Offset x="-5" y="0"/>
              </Anchor> 
            </Anchors>
            <Scripts>
              <OnClick> TestAddonToggleRecord(); </OnClick>
            </Scripts>
          </Button>
          <ScrollFrame name="TestAddonScrollBar" inherits="FauxScrollFrameTemplate" hidden="true">
            <Anchors>
              <Anchor point="TOPLEFT">
                <Offset>
                  <AbsDimension x="0" y="-28"/>
                </Offset>
              </Anchor>
              <Anchor point="BOTTOMRIGHT">
                <Offset>
                  <AbsDimension x="-30" y="33"/>
                </Offset>
              </Anchor>
            </Anchors>
            <Scripts>
              <OnVerticalScroll>
                FauxScrollFrame_OnVerticalScroll(self, offset, 16, TestAddonScrollBar_Update);
              </OnVerticalScroll>
              <OnShow>
                TestAddonScrollBar_Update()
              </OnShow>
            </Scripts>
          </ScrollFrame>

          <Frame name="TestAddonEntry1" inherits="TestAddonEntryTemplate">
            <Anchors>
              <Anchor point="TOPLEFT" relativeTo="TestAddonScrollBar" relativePoint="TOPLEFT">
                <Offset>
                  <AbsDimension x="8" y="0"/>
                </Offset>
               </Anchor>
            </Anchors>
          </Frame>
          <Frame name="TestAddonEntry2" inherits="TestAddonEntryTemplate">
            <Anchors>
              <Anchor point="TOPLEFT" relativeTo="TestAddonEntry1" relativePoint="BOTTOMLEFT"/>
            </Anchors>
          </Frame>
          <Frame name="TestAddonEntry3" inherits="TestAddonEntryTemplate">
            <Anchors>
              <Anchor point="TOPLEFT" relativeTo="TestAddonEntry2" relativePoint="BOTTOMLEFT"/>
            </Anchors>
          </Frame>
          <Frame name="TestAddonEntry4" inherits="TestAddonEntryTemplate">
            <Anchors>
              <Anchor point="TOPLEFT" relativeTo="TestAddonEntry3" relativePoint="BOTTOMLEFT"/>
            </Anchors>
          </Frame>
          <Frame name="TestAddonEntry5" inherits="TestAddonEntryTemplate">
            <Anchors>
              <Anchor point="TOPLEFT" relativeTo="TestAddonEntry4" relativePoint="BOTTOMLEFT"/>
            </Anchors>
          </Frame>

        </Frames>
    </Frame>

</Ui>